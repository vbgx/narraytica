{
  "components": {
    "schemas": {
      "SearchHighlightV1": {
        "additionalProperties": false,
        "properties": {
          "field": {
            "enum": [
              "text",
              "title",
              "speaker",
              "metadata"
            ],
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        },
        "required": [
          "field",
          "text"
        ],
        "type": "object"
      },
      "SearchItemV1": {
        "additionalProperties": false,
        "properties": {
          "highlights": {
            "items": {
              "$ref": "#/components/schemas/SearchHighlightV1"
            },
            "nullable": true,
            "type": "array"
          },
          "score": {
            "$ref": "#/components/schemas/SearchScoreV1"
          },
          "segment": {
            "$ref": "#/components/schemas/SearchSegmentV1"
          },
          "speaker": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/SearchSpeakerV1"
              },
              {
                "type": "null"
              }
            ]
          },
          "video": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/SearchVideoV1"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "segment",
          "score"
        ],
        "type": "object"
      },
      "SearchPageV1": {
        "additionalProperties": false,
        "properties": {
          "limit": {
            "minimum": 1,
            "type": "integer"
          },
          "offset": {
            "minimum": 0,
            "type": "integer"
          },
          "total": {
            "minimum": 0,
            "nullable": true,
            "type": "integer"
          }
        },
        "required": [
          "limit",
          "offset"
        ],
        "type": "object"
      },
      "SearchRequestV1": {
        "additionalProperties": false,
        "properties": {
          "filters": {
            "nullable": true,
            "type": "object"
          },
          "limit": {
            "default": 20,
            "maximum": 100,
            "minimum": 1,
            "type": "integer"
          },
          "offset": {
            "default": 0,
            "minimum": 0,
            "type": "integer"
          },
          "query": {
            "nullable": true,
            "type": "string"
          },
          "semantic": {
            "nullable": true,
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "SearchResponseV1": {
        "additionalProperties": false,
        "properties": {
          "items": {
            "items": {
              "$ref": "#/components/schemas/SearchItemV1"
            },
            "type": "array"
          },
          "page": {
            "$ref": "#/components/schemas/SearchPageV1"
          }
        },
        "required": [
          "items",
          "page"
        ],
        "type": "object"
      },
      "SearchScoreV1": {
        "additionalProperties": false,
        "properties": {
          "combined": {
            "type": "number"
          },
          "lexical": {
            "nullable": true,
            "type": "number"
          },
          "lexical_rank": {
            "minimum": 1,
            "nullable": true,
            "type": "integer"
          },
          "vector": {
            "nullable": true,
            "type": "number"
          },
          "vector_rank": {
            "minimum": 1,
            "nullable": true,
            "type": "integer"
          }
        },
        "required": [
          "combined"
        ],
        "type": "object"
      },
      "SearchSegmentV1": {
        "additionalProperties": false,
        "properties": {
          "created_at": {
            "nullable": true,
            "type": "string"
          },
          "end_ms": {
            "minimum": 0,
            "type": "integer"
          },
          "id": {
            "type": "string"
          },
          "language": {
            "nullable": true,
            "type": "string"
          },
          "segment_index": {
            "minimum": 0,
            "nullable": true,
            "type": "integer"
          },
          "source": {
            "nullable": true,
            "type": "string"
          },
          "speaker_id": {
            "nullable": true,
            "type": "string"
          },
          "start_ms": {
            "minimum": 0,
            "type": "integer"
          },
          "text": {
            "type": "string"
          },
          "transcript_id": {
            "nullable": true,
            "type": "string"
          },
          "updated_at": {
            "nullable": true,
            "type": "string"
          },
          "video_id": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "video_id",
          "start_ms",
          "end_ms",
          "text"
        ],
        "type": "object"
      },
      "SearchSpeakerV1": {
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "nullable": true,
            "type": "string"
          }
        },
        "required": [
          "id"
        ],
        "type": "object"
      },
      "SearchVideoV1": {
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "published_at": {
            "nullable": true,
            "type": "string"
          },
          "source": {
            "nullable": true,
            "type": "string"
          },
          "title": {
            "nullable": true,
            "type": "string"
          }
        },
        "required": [
          "id"
        ],
        "type": "object"
      }
    }
  },
  "info": {
    "title": "Narralytica API",
    "version": "0.1.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/search": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "language",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "source",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "video_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "speaker_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "date_from",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "date_to",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "default": 20,
              "maximum": 100,
              "minimum": 1,
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "default": 0,
              "minimum": 0,
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "semantic",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponseV1"
                }
              }
            },
            "description": "OK"
          }
        },
        "summary": "Search segments (lexical + optional vector)"
      },
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequestV1"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponseV1"
                }
              }
            },
            "description": "OK"
          }
        },
        "summary": "Search segments (body)"
      }
    }
  }
}
