{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://narralytica.ai/schemas/search.schema.json",
  "title": "SearchContracts",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request": { "$ref": "#/$defs/SearchRequest" },
    "response": { "$ref": "#/$defs/SearchResponse" }
  },
  "required": ["request", "response"],
  "$defs": {
    "SearchMode": {
      "type": "string",
      "enum": ["hybrid", "lexical", "vector"]
    },
    "SearchFilters": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "language": { "type": ["string", "null"] },
        "source": { "type": ["string", "null"] },
        "video_id": { "type": ["string", "null"] },
        "speaker_id": { "type": ["string", "null"] },
        "date_from": { "type": ["string", "null"], "format": "date-time" },
        "date_to": { "type": ["string", "null"], "format": "date-time" }
      }
    },
    "SearchRequest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["query", "limit", "offset"],
      "properties": {
        "query": { "type": ["string", "null"] },
        "mode": { "$ref": "#/$defs/SearchMode" },
        "filters": { "$ref": "#/$defs/SearchFilters" },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "SegmentSearchDocument": {
      "type": "object",
      "additionalProperties": false,
      "required": ["segment_id", "video_id", "start_ms", "end_ms", "text"],
      "properties": {
        "segment_id": { "type": "string", "minLength": 1 },
        "video_id": { "type": "string", "minLength": 1 },
        "start_ms": { "type": "integer", "minimum": 0 },
        "end_ms": { "type": "integer", "minimum": 0 },
        "text": { "type": "string", "minLength": 1 },
        "language": { "type": ["string", "null"] },
        "source": { "type": ["string", "null"] },
        "speaker_id": { "type": ["string", "null"] },
        "speaker_name": { "type": ["string", "null"] },
        "created_at": { "type": ["string", "null"], "format": "date-time" },
        "updated_at": { "type": ["string", "null"], "format": "date-time" },
        "snippet": { "type": ["string", "null"] },
        "tags": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        }
      }
    },
    "SearchScores": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "combined": { "type": ["number", "null"] },
        "lexical": { "type": ["number", "null"] },
        "vector": { "type": ["number", "null"] }
      }
    },
    "SearchResultItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["segment", "scores"],
      "properties": {
        "segment": { "$ref": "#/$defs/SegmentSearchDocument" },
        "scores": { "$ref": "#/$defs/SearchScores" },
        "highlights": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        }
      }
    },
    "SearchPage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["limit", "offset"],
      "properties": {
        "limit": { "type": "integer", "minimum": 1, "maximum": 100 },
        "offset": { "type": "integer", "minimum": 0 },
        "total": { "type": ["integer", "null"], "minimum": 0 }
      }
    },
    "SearchResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": ["items", "page"],
      "properties": {
        "items": {
          "type": "array",
          "items": { "$ref": "#/$defs/SearchResultItem" }
        },
        "page": { "$ref": "#/$defs/SearchPage" }
      }
    }
  }
}
