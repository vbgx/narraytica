# ==========================================================
# Core
# ==========================================================
ENV=local
LOG_LEVEL=info

# ==========================================================
# API Database
# ==========================================================
API_DATABASE_URL=postgresql+psycopg://user:password@127.0.0.1:15432/narralytica

POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=15432
POSTGRES_DB=narralytica
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# ==========================================================
# Redis
# ==========================================================
REDIS_URL=redis://localhost:6379

# ==========================================================
# OpenSearch
# ==========================================================
OPENSEARCH_URL=http://localhost:9200

# ==========================================================
# Qdrant
# ==========================================================
QDRANT_URL=http://localhost:6333

# ==========================================================
# MinIO / S3 (Standardized Schema)
# ==========================================================
# Endpoint must include protocol (http:// or https://)
S3_ENDPOINT=http://localhost:9000

# Access credentials
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Region (required by boto3 even for MinIO)
S3_REGION=us-east-1

# Explicit buckets (no implicit single bucket anymore)
S3_BUCKET_UPLOADS=uploads
S3_BUCKET_AUDIO=audio-tracks
S3_BUCKET_TRANSCRIPTS=transcripts

# ==========================================================
# OpenTelemetry (optional)
# ==========================================================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=narralytica-api


EMBEDDING_MODEL=bge-large-en
EMBEDDING_VECTOR_SIZE=1024
